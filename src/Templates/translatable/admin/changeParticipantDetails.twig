{% extends "_layout.twig" %}

{% block content %}
    <div class="card text-left open-theme">
        <h2>{% trans %}changeDetails.editDetails{% endtrans %}</h2>
        <form method="POST" action="{{ url_for('admin-change-participant-details', {'eventSlug': event.slug, 'participantId': person.id}) }}"
              enctype="multipart/form-data">
            {% include 'widgets/changeDetails.twig' with {'personDetails': person} %}
            <div class="text-center">
                <br/>
                <input class="btn btn-small" type="submit" value="{% trans %}changeDetails.save{% endtrans %}">
                <br/>
                <br/>
                <a class="btn btn-small btn-grey"
                   href="{{ url_for('admin-show-stats', {'eventSlug': event.slug}) }}">{% trans %}changeDetails.back{% endtrans %}</a>
            </div>
        </form>
    </div>
{% endblock %}
